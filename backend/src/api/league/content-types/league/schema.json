{
  "kind": "collectionType",
  "collectionName": "leagues",
  "info": {
    "singularName": "league",
    "pluralName": "leagues",
    "displayName": "League",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "statusleague": {
      "type": "enumeration",
      "enum": [
        "planned",
        "ongoing",
        "completed"
      ]
    },
    "matches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::match.match",
      "mappedBy": "league"
    },
    "leaguePassword": {
      "type": "string"
    },
    "useOTP": {
      "type": "boolean",
      "default": false
    },
    "league_players": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::league-player.league-player",
      "mappedBy": "league"
    },
    "createdByUser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "leagues"
    },
    "gameSystem": {
      "type": "enumeration",
      "enum": [
        "Warhammer: 40,000",
        "Warhammer: Age of Sigmar",
        "Warhammer: Kill Team",
        "Warhammer: Warcry",
        "Warhammer: Necromunda",
        "A Song of Ice and Fire",
        "Middle Earth SBG",
        "Marvel Crisis Protocol",
        "Conquest"
      ]
    },
    "startDate": {
      "type": "datetime"
    },
    "format": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "round_robin",
        "single_elimination",
        "double_elimination",
        "group_to_elimination"
      ]
    },
    "scoringRules": {
      "type": "json",
      "default": {
        "gameWon": 4,
        "gameDrawn": 2,
        "gameLost": 0,
        "bonusPoints": {
          "lostButScored50Percent": 1,
          "scoredAllPrimaryObjectives": 1
        },
        "maxPointsPerGame": 5
      }
    },
    "rulesetType": {
      "type": "enumeration",
      "enum": [
        "cryptic_cabin_standard",
        "custom"
      ],
      "default": "custom"
    },
    "otps": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::otp.otp",
      "mappedBy": "league"
    }
  }
}
